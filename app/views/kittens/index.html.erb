<% if @kittens.length == 0 %>
  <body class = "hell">
<% else %>
  <body>
<% end %>
<% if flash[:notice]  %>
  <p class = "notice"><%= flash[:notice] %></p>
<% end %>
<div class = "flex">
  <% @kittens.each do |kitten| %>
    <div class = "one-kitten">
      <p><strong>Name: </strong><%= link_to kitten.name, kitten_path(kitten), :class => 'edit-profile' %></p>
      <p><strong>Age: </strong><%= kitten.age %></p>
      <p><strong>Cuteness: </strong><%= kitten.cuteness %></p>
      <p><strong>Softness: </strong><%= kitten.softness %></p>
      <%= link_to "Edit your little friend", edit_kitten_path(kitten), :class => 'edit-profile' %>
      <%= link_to "Kill the poor kitten", kitten_path(kitten), method: :delete, data: {confirm: 'Are you really that bad?'}, :class => 'notice' %>
    </div>
  <% end %>
</div>
<% unless @kittens.length == 0 %>
  <%= link_to 'Start the kitten apocalypse!', apocalypse_kittens_path, method: :delete, data: { confirm: 'Are you really that evil?' }, :class => 'apocalypse' %>
<% end %>